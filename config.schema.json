{
  "pluginAlias": "NOAAWeather",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "NOAA Weather"
      },
      "latitude": {
        "title": "Latitude",
        "type": "number",
        "required": true
      },
      "longitude": {
        "title": "Longitude",
        "type": "number",
        "required": true
      },
      "stationId": {
        "title": "NOAA Station ID (Optional)",
        "description": "Enter a specific NOAA station ID to override auto-selection (e.g. KSEA).",
        "type": "string",
        "required": false
      },
      "refreshInterval": {
        "title": "Refresh Interval (minutes)",
        "type": "integer",
        "default": 15,
        "minimum": 5
      }
    }
  }
}
